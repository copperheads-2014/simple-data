.col-md-2
.col-md-8.user-profile
  %h1
    =@user.name
  -if @organization != nil
    %h3
      Belongs To:
      =link_to "#{@organization.name}", organization_path(@organization.id)
  -if @services != nil
    %h3
      Has Uploaded:
      -@services.each do |s|
        = link_to "#{s.name}", "/services/#{s.slug}"
  %h3
    Joined
    %span simple-data
    On
    =@user.created_at.strftime("%B %d, %Y")
.col-md-2


