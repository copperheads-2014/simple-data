.card-container
  .card
    .front
      .cover

      .user
        = image_tag('team_members/David.jpg', class: "img-circle img-responsive")
      .content
        .main
          %h3.name Dave Chmura
          %p.profession Developer
          %h5
            %i.fa.fa-map-marker.fa-fw.text-muted
            Ann Arbor, MI
          %h5
            %i.fa.fa-building-o.fa-fw.text-muted
            DevBootcamp Chicago

    / end front panel
    .back
      .header
        %h5.motto "I aspire to inspire"
      .content
        .main
          %h4.text-center Experince
          %p Dave graduated DevBootcamp in January 2015. Before that he worked as a developer for the University of Michigan.
          %h4.text-center Areas of Expertise
          %p Web design, Human Computer Interaction, HTML5, CSS3, Ruby, Sinatra, Rails, jquery, and many others...
          %h5
            %i.fa.fa-bookmark-o.fa-fw.text-muted
            =link_to "personal site", "http://www.dschmura.com", target: "_blank"
          %h5
            %i.fa.fa-envelope-o.fa-fw.text-muted
            =mail_to "dschmura@humbledaisy.com", "My email", encode: "javascript"
            /=mail_to "dschmura@humbledaisy.com", nil, replace_at: "_at_", replace_dot: "_dot_", class: "email"

      .footer
        .social-links.text-center

          %a.twitter{:href => "https://twitter.com/humbledaisy"}
            %i.fa.fa-twitter.fa-fw
          %a.github{:href => "http://github.com/dschmura"}
            %i.fa.fa-github.fa-fw
          %a.linkedin{:href => "http://lnkd.in/VuU9xY"}
            %i.fa.fa-linkedin.fa-fw
          %a.google{:href => "#"}
            %i.fa.fa-google-plus.fa-fw